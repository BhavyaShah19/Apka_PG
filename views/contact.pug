extends base.pug

block style
 style
  include ../static/style.css
  include ../static/contact.css

block content
 div.container
  div.uppertitle
    h2.title It's Easy To Find Us.
    p.desc Please Feel Free to Contact us for any PG Booking related Issues, Complaints and for any support needed for moving to the PG you have Booked through us.
  h1 Contact Us
  form(action="/contact" method="post" class="myform")
   input(type="text" class="myinput" name="name" placeholder="Enter your name")
   input(type="phone" class="myinput" name="phone" placeholder="Enter your phone number")
   input(type="email" class="myinput" name="email" placeholder="Enter your Email ID")
   input(type="text" class="myinput" name="desc" placeholder="Enter your Problem")
   button(class="btn")
    | Submit